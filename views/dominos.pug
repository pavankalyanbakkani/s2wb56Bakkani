extends layout
block content
  h1= title
  p Welcome to the dominos
  div(class="container-fluid")
        div(class="row")
            -
                let dominos = [
                    {
                        "Itemname": "Large chicken pizza",
                        "Quantity": 1,
                        "price": "fifty USD"
                    },
                    {
                        "Itemname": "medium pizza",
                        "Quantity": 2,
                        "price": "Twenty USD"
                    },
                    {
                        "Itemname": "small pizza",
                        "Quantity": 3,
                        "price": "Ten Two USD"
                    },                   
                ]
            each v,index in dominos
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.Itemname}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.Quantity}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.price}
  script.                
        function buy(intemNo)
        {
              alert(`you purchased Item ${intemNo+1}`)
        }